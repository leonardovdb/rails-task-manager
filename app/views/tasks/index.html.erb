<h1>My Tasks</h1>

<!-- Add the link to create a new task -->
<p>
  <%= link_to "New Task", new_task_path %>
</p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %><br>
      <%= task.details %><br>
      Completed: <%= task.completed ? "✔️" : "❌" %><br>
      <%= link_to "Edit", edit_task_path(task) %> |
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
